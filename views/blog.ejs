<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>" width="600px">
        <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profilePicture %>" width="100px"><%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
           <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
            required
          />
          <button class="btn btn-sm btn-primary" type="submit">Add</button>
        </div>
        </form>
        <% } %>

        <div class="mt-4">
            <% comments.forEach(comments => { %>
                <div>
                    <img src="<%= comments.createdBy.profilePicture %>" width="50px">
                    <%= comments.createdBy.fullName %>
                    <pre><%= comments.content %></pre>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/script') %>
</body>
</html>